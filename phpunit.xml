<phpunit backupGlobals="false"
         backupStaticAttributes="false" 
         bootstrap="tests/bootstrap.php"
         cacheTokens="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="false">

    <filter>
        <whitelist>
            <directory suffix=".php">lib/AnimeTools/</directory>
        </whitelist>
    </filter>

    <testsuite name="AnimeTools Test Suite">
        <directory>tests/AnimeTools/</directory>
    </testsuite>
</phpunit>
